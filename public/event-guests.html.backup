                    <div class="flex justify-between">
                        <div class="flex-1">
                            <h3 class="text-xl font-bold mb-2">${escapeHtml(g.name)}</h3>
                            <div class="text-sm text-gray-600">
                                ${g.phone ? `ğŸ“± ${escapeHtml(g.phone)}<br>` : ''}
                                ${g.plus > 0 ? `ğŸ‘¥ +${g.plus} ××œ×•×•×™×<br>` : ''}
                                ${g.table > 0 ? `ğŸª‘ ×©×•×œ×—×Ÿ ${g.table}` : ''}
                            </div>
                        </div>
                        <div>
                            <span class="inline-block px-4 py-2 rounded-full text-sm font-bold ${badgeClass}">
                                ${badgeIcon}
                            </span>
                        </div>
                    </div>
                </div>
            `;
            }).join('');
            document.getElementById('guests-list').innerHTML = html || '<p class="text-center text-gray-500 py-12">×œ× × ××¦××• ×ª×•×¦××•×ª</p>';
        }


        function autoArrange() {
            const seatsPerTable = parseInt(document.getElementById('seats-per-table').value) || 10;
            let table = 1;
            let seats = 0;
            
            // Sort confirmed guests by name and arrange them
            guests.filter(g => g.status === 'confirmed' || g.status === '×××•×©×¨').forEach(g => {
                const size = 1 + (parseInt(g.plus) || 0);
                if (seats + size > seatsPerTable) {
                    table++;
                    seats = 0;
                }
                g.table = table;
                seats += size;
