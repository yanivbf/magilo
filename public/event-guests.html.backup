                const statusClass = statusText === '×××•×©×¨' ? 'confirmed' : statusText === '×××ª×™×Ÿ' ? 'pending' : 'declined';
                const badgeClass = statusText === '×××•×©×¨' ? 'bg-green-100 text-green-700' :
                                  statusText === '×××ª×™×Ÿ' ? 'bg-orange-100 text-orange-700' :
                                  'bg-red-100 text-red-700';
                const badgeIcon = statusText === '×××•×©×¨' ? 'âœ“ ××™×©×¨' : statusText === '×××ª×™×Ÿ' ? 'â³ ×××ª×™×Ÿ' : 'âœ— ×œ× ×™×’×™×¢';
                
                return `
