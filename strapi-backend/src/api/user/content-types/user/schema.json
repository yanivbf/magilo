{
  "kind": "collectionType",
  "collectionName": "users",
  "info": {
    "singularName": "user",
    "pluralName": "users",
    "displayName": "User",
    "description": "Platform user who can create and manage pages"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "userId": {
      "type": "string",
      "unique": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email"
    },
    "phone": {
      "type": "string"
    },
    "wallet": {
      "type": "decimal",
      "default": 0
    },
    "avatar": {
      "type": "string"
    },
    "lastActive": {
      "type": "datetime"
    },
    "subscriptionStatus": {
      "type": "enumeration",
      "enum": ["active", "inactive", "expired"],
      "default": "inactive"
    },
    "subscriptionExpiry": {
      "type": "datetime"
    },
    "pages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::page.page",
      "mappedBy": "user"
    },
    "purchases": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::purchase.purchase",
      "mappedBy": "user"
    },
    "leads": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lead.lead",
      "mappedBy": "user"
    }
  }
}
