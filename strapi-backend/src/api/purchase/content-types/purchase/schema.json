{
  "kind": "collectionType",
  "collectionName": "purchases",
  "info": {
    "singularName": "purchase",
    "pluralName": "purchases",
    "displayName": "Purchase",
    "description": "Customer purchases from store/course/restaurant pages"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "products": {
      "type": "json",
      "required": true
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "paymentMethod": {
      "type": "string",
      "required": true
    },
    "customerName": {
      "type": "string",
      "required": true
    },
    "customerPhone": {
      "type": "string",
      "required": true
    },
    "customerEmail": {
      "type": "email"
    },
    "customerAddress": {
      "type": "text"
    },
    "shipping": {
      "type": "boolean",
      "default": false
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "processing",
        "shipped",
        "delivered",
        "cancelled"
      ],
      "default": "pending",
      "required": true
    },
    "statusText": {
      "type": "string"
    },
    "pickedAt": {
      "type": "datetime"
    },
    "deliveredAt": {
      "type": "datetime"
    },
    "driverId": {
      "type": "string"
    },
    "driverName": {
      "type": "string"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::user.user",
      "inversedBy": "purchases"
    },
    "page": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::page.page",
      "inversedBy": "purchases"
    }
  }
}
